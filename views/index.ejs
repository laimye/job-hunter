<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title>JOBHUNTER</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js"></script> 
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular-resource.min.js"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.4.2/angular-ui-router.min.js"></script>
  </head>
  <body style="{{bgStyle}}">
    <!-- Nav bar -->
    <nav class="navbar navbar-default navbar-fixed-top" style="{{navStyle}}">
      <div class="container-fluid">
          <% if (user) { %>
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bar" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
               <a class="navbar-brand" ui-sref="home"><img src="http://i.imgur.com/IcqnpAE.png" id="logo-img"></a>
            </div>
            <div class="collapse navbar-collapse" id="bar">
              <ul class="nav navbar-nav navbar-right">
                <li><a ui-sref="home" ui-sref-active="active">MY JOBS</a></li>
                <li><a ui-sref="newJob" ui-sref-active="active">ADD JOB</a></li>
                <li><a href="/logout" id="log-out">LOG OUT &nbsp;&nbsp;<img src="<%= user.profileImage %>" class="profile-image-cropper" ></a></li>
              </ul>
            </div>
          <% } else { %>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/auth/google" style="color:white">SIGN IN WITH <img src="http://i.imgur.com/jWMLUYc.png" style="width:25px;height:25px;"></a></li>
            </ul>
          <% } %>
      </div>
    </nav>

  <div ui-view></div>

    <script>
      <% if(user) { %>
        var loggedInUser = {
          name: "<%= user.name %>",
          email: "<%= user.email %>",
          avatar: "<%= user.profileImage %>"
        }
        window.location.hash = '#!/home';
      <% } else { %>
        var loggedInUser = null;
      <% } %>
    </script>

  <script src="/javascripts/app.js"></script>
  <script src="/javascripts/services/job-resource.js"></script>
  <script src="/javascripts/controllers/add-job-controller.js"></script>
  <script src="/javascripts/controllers/all-jobs-controller.js"></script>
  <script src="/javascripts/controllers/show-job-controller.js"></script>
  <script src="/javascripts/controllers/edit-job-controller.js"></script>
   
  </body>
</html>
